generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  OTP
  GOOGLE
  APPLE
}

model User {
  id          String        @id @default(cuid())
  email       String?       @unique
  phone       String?       @unique
  name        String?
  avatarUrl   String?
  authProvider AuthProvider @default(OTP)
  profile     Profile?
  medications UserMedication[]
  touchpoints Touchpoint[]
  activities  Activity[]
  sessions    Session[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Profile {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @unique
  stage       String?
  coach       Coach?   @relation(fields: [coachId], references: [id])
  coachId     String?
  assessment  Int?
  planStatus  String?
  focusAreas  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Coach {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String?
  profiles  Profile[]
  createdAt DateTime  @default(now())
}

model Medication {
  id          String           @id @default(cuid())
  name        String
  description String?
  userLinks   UserMedication[]
}

model UserMedication {
  id           String     @id @default(cuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  medication   Medication @relation(fields: [medicationId], references: [id])
  medicationId String
  schedule     String
  startDate    DateTime?  @default(now())
  endDate      DateTime?
}

model Touchpoint {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  type       String
  scheduledAt DateTime
  status     String    @default("upcoming")
  notes      String?
}

model Activity {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  admin     Admin?   @relation(fields: [adminId], references: [id])
  adminId   String?
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}

model Admin {
  id        String     @id @default(cuid())
  name      String
  email     String?    @unique
  role      String     @default("coach")
  activities Activity[]
  createdAt DateTime   @default(now())
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  refreshToken String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
